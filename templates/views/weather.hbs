   <script>
      const getcurrentDay = () => {
      let weekday = new Array(7);
      weekday[0] = "sunday";
      weekday[1] = "monday";
      weekday[2] = "tuesday";
      weekday[3] = "wednesday";
      weekday[4] = "Thursday";
      weekday[5] = "Friday";
      weekday[6] = "saturday";

    let currentTime = new Date();
    days = weekday[currentTime.getDay()];

    let day = document.getElementById('day');
    day.innerText = days;
    }
    getcurrentDay();
   </script>
